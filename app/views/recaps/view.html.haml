!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %title= @title_recap
    :css
      body {
        font-family: Arial, Verdana;
        font-size: 9pt;
      }

      .align-center {
        text-align: center;
      }

      .align-left {
        text-align: left;
      }

      .align-right {
        text-align: right;
      }

      .header {
        margin-bottom: 20px;
      }

      .left {
        float: left;
      }

      .right {
        float: right;
      }

      table.header {
        width: 100%;
        border-collapse: collapse;
      }
      table.header th {
        font-weight: 900;
      }
      table.header th, table.header td {
        padding: 4px;
      }

      .table-report {
        display: block;
        font-family: sans-serif;
        -webkit-font-smoothing: antialiased;
        overflow: auto;
        width: auto;
      }
      .table-report th {
        background-color: #18aa4a;
        color: white;
        font-weight: bold;
        padding: 20px 30px;
        text-align: center;
      }
      .table-report td {
        background-color: #f2f2f2;
        color: #333;
        padding: 8px 5px;
        vertical-align: top;
        box-decoration-break: clone;
      }
      .table-report td ol {
        padding-left: 20px;
        margin: 0;
      }
      @media print {
        .table-report tr {
          page-break-inside: avoid;
        }
        .table-report thead {
          display: table-header-group;
        }
      }
      .center {
        margin: auto;
        width: 54%;
        padding: 10px;
      }
      .button-actions li {
        display: inline-block;
        padding: 5px;
      }
      a.button {
        -webkit-appearance: button;
        -moz-appearance: button;
        appearance: button;

        text-decoration: none;
        color: initial;
        padding: 5px;
      }
      .green {
        background: #18aa4a;
        color: #fff;
      }
  %body
    %div{:class => ("center" unless params[:pdf])}
      - unless params[:pdf]
        .align-right
          %ul.button-actions
            %li= link_to "Back", range_recaps_path, class: "button"
            %li= link_to "Save as PDF", request.url + ".pdf", class: "button"

      #wrapper
        %table.header
          %tr
            %td{rowspan: 3}
              = image_tag "41studio-logo.png", width: 180
            %th.align-left Project
            %th :
            %td= @project.name
          %tr
            %th.align-left Date
            %th :
            %td= @date_range
          %tr
            %th.align-left Reported by
            %th :
            %td= @project.user.try(:full_name)

        %table.table-report
          %thead.green
            %tr
              %th.align-center{:style => "width: 5%;"} No.
              %th{:style => "width: 18%"} Date
              %th{:style => "width: 40%"} Completed
              %th{:style => "width: 40%"} On Progress

          %tbody
            - @reports.each_with_index do |report, idx|
              %tr
                %td.align-center #{idx+=1}
                %td= date_and_work_hour_text(report.reported_at, report.work_hour)
                %td
                  %ol
                    - report.tasks.select{|task| task.completed? }.each do |task|
                      %li= task.title
                %td
                  %ol
                    - report.tasks.select{|task| task.on_progress? }.each do |task|
                      %li= task.title
            %tr
              %td{colspan: 4}
                %b Total work hour: #{round_work_hour(@reports.map(&:work_hour).sum)} hrs
