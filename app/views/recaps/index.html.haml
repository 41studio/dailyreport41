.row
  .col-xs-12
    .card
      .card-header
        Recap

      .card-body
        .row
          .col-md-3.text-right
            = label_tag "Date"
          .col-md-9
            .input-group#recap-datepicker
              %span.input-group-addon
                %i.fa.fa-calendar
              #div
                = text_field_tag :recap_date, nil, class: "form-control recap-date text-center"
                = hidden_field_tag :start_date
                = hidden_field_tag :end_date

      .card-body.no-padding
        .dataTables_wrapper
          %table.table.table-striped.table-hover{:style => "margin-bottom: 0;"}
            %thead
              %tr{:role => "row"}
                %th Project
                %th User
                %th
            %tbody
              - @projects.each do |project|
                %tr
                  %td= project.name
                  %td= project.user_name
                  %td.text-right
                    = link_to 'Recap', project_user_recap_path(project_id: project.slug, user_id: project.user_id, start_date: nil, end_date: nil), method: :post, class: "btn btn-xs btn-success"

          .bottom.text-center
            = paginate @projects
