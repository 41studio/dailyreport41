.row
  .col-xs-12
    .card
      .card-header
        Detail Project

      .card-body
        .dataTables_wrapper
          .top= link_to 'Edit', edit_project_path(@project), class: "btn btn-success"
        .section
          .section-title Name
          .section-body= @project.name
        .section
          .section-title Description
          .section-body= Markdown.new(@project.description).to_html.html_safe
        .section
          .section-title Client
          .section-body
            .fa-ul
              = content_tag(:li, fa_icon("user li", text: @project.client_name))
              = content_tag(:li, fa_icon("envelope li", text: @project.email_client))
        .section
          .section-title Project Manager
          .section-body
            .fa-ul
              = content_tag(:li, fa_icon("user li", text: @project.project_manager_name))
              = content_tag(:li, fa_icon("envelope li", text: @project.email_project_manager))
        .section
          .section-title Additional information
          .section-body
            %ul
              = content_tag(:li, "Cc: #{@project.email_cc}")
              = content_tag(:li, "Bcc: #{@project.email_bcc}")
