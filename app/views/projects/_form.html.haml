= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :client_name
    = f.text_field :client_name
  .field
    = f.label :email_client
    = f.email_field :email_client
  .field
    = f.label :project_manager_name
    = f.text_field :project_manager_name
  .field
    = f.label :email_project_manager
    = f.email_field :email_project_manager
  .field
    = f.label :email_cc
    = f.email_field :email_cc
  .field
    = f.label :email_bcc
    = f.email_field :email_bcc
  .actions
    = f.submit 'Save'
