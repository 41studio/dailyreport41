!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/

    %title DailyReport41
    - if user_signed_in?
      = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
      = javascript_include_tag 'application', 'data-turbolinks-track' => true
    - else
      = stylesheet_link_tag    'login', media: 'all', 'data-turbolinks-track' => true
    - if Rails.env.development?
      -#= javascript_include_tag 'miniprofiler_turbolinks'
    = csrf_meta_tags
    %script{:async => "async", :src => "https://cdn.onesignal.com/sdks/OneSignalSDK.js"}
    :javascript
      var OneSignal = window.OneSignal || [];
      OneSignal.push(["init", {
        appId: "db9b3e0d-1476-4ea1-ac1f-d08afe5ac582",
        autoRegister: false, /* Set to true to automatically prompt visitors */
        subdomainName: 'dailyreport41',
        /*
        subdomainName: Use the value you entered in step 1.4: http://imgur.com/a/f6hqN
        */
        httpPermissionRequest: {
          enable: true
        },
        notifyButton: {
          enable: true /* Set to false to hide */
        }
      }]);


  %body
    - if user_signed_in?
      .app.app-default
        %aside#sidebar.app-sidebar
          .sidebar-header
            %a.sidebar-brand{:href => root_path}
              DailyReport41
            %button.sidebar-toggle{:type => "button"}
              %i.fa.fa-times
          .sidebar-menu
            %ul.sidebar-nav
              %li{:class => is_active_dashboard?}
                %a{:href => root_path}
                  .icon
                    %i.fa.fa-tasks{"aria-hidden" => "true"}
                  .title Dashboard
              %li{:class => is_active_projects?}
                %a{:href => projects_path}
                  .icon
                    %i.fa.fa-cubes{"aria-hidden" => "true"}
                  .title Projects
              %li{:class => is_active_reports?}
                %a{:href => reports_path}
                  .icon
                    %i.fa.fa-clipboard{"aria-hidden" => "true"}
                  .title Reports
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "/"}
                  .icon
                    %i.fa.fa-user{"aria-hidden" => "true"}
                  .title Profile
                .dropdown-menu
                  %ul
                    %li
                      = link_to "Profile", profile_user_path
                    %li
                      = link_to "Logout", destroy_user_session_path, method: :delete

        .app-container
          %nav#navbar.navbar.navbar-default{:style => "height: 0; min-height: 0;"}
            .container-fluid
              .navbar-collapse.collapse.in
                %ul.nav.navbar-nav.navbar-mobile
                  %li
                    %button.sidebar-toggle{:type => "button"}
                      %i.fa.fa-bars
                  %li.logo
                    %a.navbar-brand{:href => "#"}
                      DailyReport41
          = yield

          %footer.app-footer
            .row
              .col-xs-12
                .footer-copyright
                  Copyright Â© #{Time.now.year} DailyReport41

    - else
      .app.app-default
        = yield


