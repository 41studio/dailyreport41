!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/

    %title DailyReport41
    - if user_signed_in?
      = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
      = javascript_include_tag 'application', 'data-turbolinks-track' => true
    - else
      = stylesheet_link_tag    'login', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    - if user_signed_in?
      .app.app-default
        %aside#sidebar.app-sidebar
          .sidebar-header
            %a.sidebar-brand{:href => root_path}
              DailyReport41
            %button.sidebar-toggle{:type => "button"}
              %i.fa.fa-times
          .sidebar-menu
            %ul.sidebar-nav
              %li{:class => is_active_dashboard?}
                %a{:href => root_path}
                  .icon
                    %i.fa.fa-tasks{"aria-hidden" => "true"}
                  .title Dashboard
              %li{:class => is_active_projects?}
                %a{:href => projects_path}
                  .icon
                    %i.fa.fa-cubes{"aria-hidden" => "true"}
                  .title Projects
              %li{:class => is_active_reports?}
                %a{:href => reports_path}
                  .icon
                    %i.fa.fa-clipboard{"aria-hidden" => "true"}
                  .title Reports
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "/"}
                  .icon
                    %i.fa.fa-user{"aria-hidden" => "true"}
                  .title Profile
                .dropdown-menu
                  %ul
                    %li
                      = link_to "Profile", profile_user_path
                    %li
                      = link_to "Logout", destroy_user_session_path, method: :delete

        .app-container
          / %nav#navbar.navbar.navbar-default
          /   .container-fluid
          /     .navbar-collapse.collapse.in
          /       %ul.nav.navbar-nav.navbar-mobile
          /         %li
          /           %button.sidebar-toggle{:type => "button"}
          /             %i.fa.fa-bars
          /         %li.logo
          /           %a.navbar-brand{:href => "#"}
          /             DailyReport41
          /         %li
          /           %button.navbar-toggle{:type => "button"}
          /             %img.profile-img{:src => image_path("profile.png")}/
          /       %ul.nav.navbar-nav.navbar-left
          /         %li.navbar-title= navbar_title
          /         %li.navbar-search.hidden-sm
          /           %input#search{:placeholder => "Search..", :type => "text"}/
          /           %button.btn-search
          /             %i.fa.fa-search
          /       %ul.nav.navbar-nav.navbar-right
          /         %li.dropdown.profile
          /           %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "/"}
          /             %img.profile-img{:src => image_path("profile.png")}/
          /             .title Profile
          /           .dropdown-menu
          /             .profile-info
          /               %h4.username= current_user.full_name

          /             %ul.action
          /               %li
          /                 = link_to "Profile", profile_user_path
          /               %li
          /                 = link_to "Logout", destroy_user_session_path, method: :delete


          = yield

          %footer.app-footer
            .row
              .col-xs-12
                .footer-copyright
                  Copyright Â© #{Time.now.year} DailyReport41

    - else
      .app.app-default
        = yield


